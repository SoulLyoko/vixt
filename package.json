{
  "name": "vixt-framework",
  "type": "module",
  "version": "0.5.15",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "build": "pnpm -F \"./packages/*\" build",
    "build:docs": "pnpm -F docs build",
    "build:h5": "pnpm -F test-uni build",
    "build:react": "pnpm -F test-react build",
    "build:vue": "pnpm -F test-vue build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "dev": "pnpm --parallel -F \"./packages/*\" dev",
    "dev:docs": "pnpm -F docs dev",
    "dev:h5": "pnpm -F test-uni dev",
    "dev:mp": "pnpm -F test-uni dev:mp",
    "dev:react": "pnpm -F test-react dev",
    "dev:vue": "pnpm -F test-vue dev",
    "dev:rolldown-vue": "pnpm -F rolldown-vue dev",
    "dev:rolldown-react": "pnpm -F rolldown-react dev",
    "lint": "eslint .",
    "postinstall": "npx simple-git-hooks",
    "prerelease": "pnpm build && pnpm test run && pnpm test:vue run",
    "release": "bumpp",
    "rm:dist": "tsx scripts/rm-dist.ts",
    "tc": "tsc --noEmit",
    "test": "vitest",
    "test:vue": "pnpm -F test-vue test",
    "upd": "taze major -r -l -I"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@unocss/eslint-plugin": "catalog:vite",
    "@vitest/browser": "catalog:vite",
    "@vitest/browser-playwright": "catalog:vite",
    "bumpp": "catalog:",
    "conventional-changelog-cli": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-format": "catalog:",
    "execa": "catalog:",
    "lint-staged": "catalog:",
    "playwright": "catalog:vite",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vitest": "catalog:vite"
  },
  "pnpm": {
    "overrides": {
      "@vixt/rolldown-react>vite": "catalog:rolldown",
      "@vixt/rolldown-vue>vite": "catalog:rolldown",
      "@vue/shared": "catalog:vue",
      "vite": "catalog:vite",
      "vue": "catalog:vue"
    },
    "peerDependencyRules": {
      "allowAny": [
        "vite",
        "@dcloudio/types"
      ]
    }
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit $1",
    "pre-commit": "pnpm lint-staged"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
